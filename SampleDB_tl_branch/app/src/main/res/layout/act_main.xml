<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logBox"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/users_edittext"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="35sp" />

    <Button
        android:id="@+id/prepareBtn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/cid_blue_light"
        android:text="Prepare User"
        android:textColor="@color/white_smoke"
        android:textSize="18sp" />


    <Button
        android:id="@+id/enrollAllBtn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/cid_blue_light"
        android:text="Enroll all User"
        android:textColor="@color/white_smoke"
        android:textSize="18sp" />

    <Button
        android:id="@+id/matchUserBtn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/cid_blue_light"
        android:text="Match all user"
        android:textColor="@color/white_smoke"
        android:textSize="14sp" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/cid_blue_light"
        android:text="Delete all enrolled user"
        android:textColor="@color/white_smoke"
        android:textSize="14sp" />

</LinearLayout>